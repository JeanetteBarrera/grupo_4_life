<!-- Header -->
<header class="fixed z-50 top-0 w-full">

   <div class="header">
        <div class="relative">

            <div class="hamburger block ">
                <div class="_layer -top  w-8"></div>
                <div class="_layer -mid w-8"></div>
                <div class="_layer -bottom w-8"></div>
            </div>
          
            <!--<figure class="marca left-16">-->
            <a href="/" class="marca left-16">
                <img src="/images/LogoRosa.png" class="w-full" alt="Logo">
            </a>
            <!--</figure>-->

            <div class="inline-block icons text-lg sm:text-2xl">

                <a href="/account/profile" id="user" class="text-gray-500">
                    <%if (locals.user) {%>
                        <%= user.name %> 
                    <%}%>
                    <i class="far fa-user"></i>
                </a>
                <span id="cart" ><i class="fas fa-shopping-cart"></i></span>
            </div>
        
            <%if (locals.user) {%>
            
                <%if ((locals.user!= 'undefined') && (locals.user.rol == "user")) {%>
                  <!-- MENU DE NAVEGACION PARA USUARIOS LOGUEADEOS-->
          
                  <nav class="menu-mobile w-10/12 sm:w-1/2 md:w-1/3">

                      <figure class="avatar w-24 h-24 sm:w-32 sm:h-32">
                          <img class="" src="/images/avatars/<%=user.avatar%>" alt="Imagen de perfil">
                      </figure>
                      

                      <ul class="text-lg mt-2 sm:text-xl">
                          <li class=""><a href="/account/profile">Profile <span class="name-mobile"> <%= user.name %></span></a></li>
                          <li class=""><a href="/#categorias-mujer">women</a></li>
                          <li class=""><a href="/#categorias-hombre">men</a></li>
                          <li class=""><a href="/#sobreLife">About Life</a></li>
                          <li><a href="/account/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                      </ul>

                  </nav>
                <% }%>
          
                <%if ((locals.user!= 'undefined') && (locals.user.rol == 'admin')) {%>
                  <!--MENU DE NAVEGACION PARA ADMINISTRADORES-->

                  <nav class="menu-mobile w-10/12 sm:w-1/2 md:w-1/3">
                      
                      <figure class="avatar w-24 h-24 sm:w-32 sm:h-32">
                          <img src="/images/avatars/<%=user.avatar%>" alt="Imagen de perfil">
                      </figure>

                      <ul class="text-lg mt-2">
                          <li class=""><a href="/account/admin/profile">Admin <span class="name-mobile"> <%= user.name %></span></a></li>
                          <li class=""><a href="/admin/product/database/list"><i class="fas fa-database"></i> Inventory</a></li>
                          <li class=""><a href="/admin/product/create"><i class="fas fa-plus"></i> New Product</a></li>
                          <li class=""><a href="/admin/product/list"><i class="fas fa-edit"></i> Edit/Delete</a></li>
                          <li class=""><a href="#"><i class="fas fa-users"></i> Accounts</a></li>
                          <li class=""><a href="/account/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                      </ul>

                  </nav> 
                <% }%>

            <%} else {%> 
              <!---MENU PARA INGRESO SIN LOGIN-->
              <nav class="menu-mobile w-10/12 flex flex-col h-full sm:w-1/2 md:w-1/3">
                <figure class="flex justify-center mt-20">
                    <img src="/images/LogoRosa.png" class="w-3/4" alt="">
                </figure>
                <ul class="text-xl mt-2 sm:mt-7 sm:text-2xl">
                    <li class=""><a href="/#categorias-mujer">women</a></li>
                    <li class=""><a href="/#categorias-hombre">men</a></li>
                    <li class=""><a href="/#sobreLife">About Life</a></li>
                    <li class=""><a href="/account/login">Log In</a></li>
                    <li class=""><a href="/account/create">Sign Up</a></li>
                </ul>
                <!--<div class="flex">
                    <a href=""><i class="fab fa-instagram"></i></a>
                    <a href=""><i class="fab fa-facebook-f"></i></a>
                    <a href=""><i class="fab fa-twitter"></i></a>
                </div>-->
              </nav>
            <%}%>
        </div>
    </div>
    <div class="second-menu bg-black flex flex-wrap justify-around text-white text-center text-sm sm:text-base uppercase"> 
        <a href="/#categorias-mujer">women</a>
        <a href="/#categorias-hombre">men</a>
        <a href="/#sobreLife">contact us</a>
        <a href="/#sobreLife">about life</a>
    </div>

</header>
 
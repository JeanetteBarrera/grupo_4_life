<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %> 
<body>
  <!-- Header -->
  <%- include("./partials/header") %>
  
  <!-- Main -->
  <main class= "mt-32">
    <div class="formulario w-4/5 sm:w-6/12 md:w-5/12 mx-auto shadow-md grid grid-cols-1  bg-gray-200 ">
      <form action="" method="POST" class="p-3 md:p-8">
        <div class="text-center my-3 ">
          <h1 class="titulo text-2xl md:text-4xl">Ingresar</h1>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1">Email</label>-->
          <input type="email" id="email" name="email" placeholder="E-mail" value="<%= (typeof old != 'undefined' && old.email )? old.email : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent">
          <span class="errores" id="emailErrors"><%= (typeof errores != 'undefined' && errores.email) ? errores.email.msg : "" %></span>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1">Contrase単a</label>-->
          <input type="password" id="password" name="password" id="" placeholder="Contrase単a" value="<%= (typeof old != 'undefined' && old.password) ? old.password : ""%>"  class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent">
          <span class="errores" id="passwordErrors" ><%= (typeof errores != 'undefined' && errores.password) ? errores.password.msg : "" %></span>
        </div>
        <div>
          <input type="checkbox" name="recordar" id="recordar" class="recordarme"><label for="recordar">recordar</label>
        </div>
        <a href="#" class="text-xs md:text-sm">多Olvidaste tu contrase単a?</a>
        <div class="my-5 flex justify-center">
          <button type="submit" class="button w-5/12 bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-opacity-50">Ingresar</button>
        </div>
      </form>
      <% if (typeof error != 'undefined') { %>
        <div class="text-center text-purple-800">
            <span class="text-lg"> <%= error.msg %> </span>
        </div>
    <% } %>
    </div>
  </main>
  <!-- Footer -->
  <%- include("./partials/footer") %>

  <script src="/javascripts/header.js"></script>
  <script src="/javascripts/registro.js"></script>

</body>
</html>
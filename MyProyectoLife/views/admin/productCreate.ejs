<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head')  %> 
<body>   
    <!-- Header -->
    <%- include('./partials/header') %> 
      <div class="bg-gray-100 mx-auto max-w-6xl bg-white py-20 px-12 lg:px-24 shadow-xl mb-24">
          <div class="row justify-content-center mt-5">
              <h2 class="text-center my-5">FORMULARIO DE CARGA DE PRODUCTO</h2>

              <form action="/admin/product/store"  method="POST" enctype="multipart/form-data">
                <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
                  <div class="-mx-3 md:flex mb-6">
                    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="Categoria">
                        Categoria
                      </label>
                      <select name="category" id="" class="w-full bg-gray-200 border border-gray-200 text-black text-xs py-3 px-4 pr-8 mb-3 rounded"  >
                        <option selected disabled>Seleccione una categoria</option>
                        <option value="hombre">Hombres</option>
                        <option value="mujer">Mujeres</option>
                      </select>
                    </div>
                    <div class="md:w-1/2 px-3">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="subcategoria">
                        Subcategoria
                      </label>
                      <select name="subcategory" class="w-full bg-gray-200 border border-gray-200 text-black text-xs py-3 px-4 pr-8 mb-3 rounded" id="">
                        <option selected disabled>Seleccione una subcategoria</option>
                        <% categories[0].subcategories.forEach( subcategory => { %>
                          <option><%= subcategory %></option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                  <div class="-mx-3 md:flex mb-6">
                    <div class="md:w-full px-3">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="Producto">
                        Producto
                      </label>
                      <input type="text" name="name" class="w-full bg-gray-200 text-black border border-gray-200 rounded py-3 px-4 mb-3" >
                    </div>
                  </div>
                  <div class="-mx-3 md:flex mb-6">
                    <div class="md:w-1/2 px-3">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="Descripcion">
                        Descripcion
                      </label>
                      <textarea name="description" id="" class="w-full bg-gray-200 text-black border border-gray-200 rounded py-3 px-4 mb-3"></textarea>
                    </div>
                  </div>
                  <div class="-mx-3 md:flex mb-6">
                      <div class="md:w-1/2 px-3">
                        <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="Archivo">Seleccione la foto: </label>
                        <input type="file" name="img">
                      </div>
                  </div>
                
                  <div class="-mx-3 md:flex mb-2">
                    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="Descuento">
                        Descuento
                      </label>
                      <input type="number" name="discount" class="w-full bg-gray-200 border border-gray-200 text-black text-xs py-3 px-4 pr-8 mb-3 rounded"> 
                    </div>
                  </div>
                  
                  <!--<div class="md:w-1/2 px-3">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="color">
                        Colores
                      </label>
                      <input class="w-full bg-gray-200 text-black border border-gray-200 rounded py-3 px-4 mb-3" >
                      <input type="color" name="" id="">
                    </div>-->
                  <div class="md:w-1/2">
                      <label class="uppercase tracking-wide text-black text-xs font-bold mb-2" for="precio">Precio</label>
                      <input type="number" name="price" class="w-full bg-gray-200 text-black border border-gray-200 rounded py-3 px-4 mb-3" >
                  </div>
                </div>  
                <div class="-mx-3 md:flex mt-2">
                    <div class="md:w-full px-3">
                      <button type="submit" class="md:w-full bg-gray-900 text-white font-bold py-2 px-4 border-b-4 hover:border-b-2 border-gray-500 hover:border-gray-100 rounded-full">Guardar</button>
                    </div>
                </div>
              </form>
          </div>
      </div>
</body>
</html>
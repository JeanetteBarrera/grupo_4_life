<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %> 
<body>
  <!-- Header -->
  <%- include("./partials/header") %>
  
  <!-- Main -->
  <main class= "mt-32 container-form">
    <div class="formulario w-4/5 sm:w-6/12 md:w-5/12 mx-auto shadow-md grid grid-cols-1  bg-gray-200 ">
      <form action="" method="POST" class="p-3 md:p-8">
        <div class="text-center my-3 ">
          <h1 class="titulo text-2xl md:text-4xl">Sign Up</h1>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1 text-sm font-semibold">Nombre</label>-->
          <input type="text" id="name" name="name" placeholder="First Name" value="<%= (typeof old != 'undefined' && old.name) ? old.name : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent" >
          <span class="errores" id="nameErrors"><%= (typeof errores != 'undefined' && errores.name) ? errores.name.msg : "" %></span>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1 text-sm font-semibold">Apellido</label>-->
          <input type="text" id="surname"name='surname' placeholder="Last Name" value="<%= (typeof old != 'undefined' && old.surname) ? old.surname : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent" >
          <span class="errores"  id="surnameErrors">  <%= (typeof errores != 'undefined' && errores.surname) ? errores.surname.msg : "" %></span>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1 text-sm font-semibold">Email</label>-->
          <input type="email" id="email"name="email" placeholder="E-mail" value="<%= (typeof old != 'undefined' && old.email) ? old.email : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent">
          <span class="errores" id="emailErrors"><%= (typeof errores != 'undefined' && errores.email) ? errores.email.msg : "" %></span>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1 text-sm font-semibold">Contraseña</label>-->
          <input type="password" id="password" name="password" id="" placeholder="Password" value="<%= (typeof old != 'undefined' && old.password) ? old.password : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent" >
          <span class="errores"id="passwordErrors"><%= (typeof errores != 'undefined' && errores.password) ? errores.password.msg : "" %></span>
        </div>
        <div class="my-3 md:my-6">
          <!--<label for="" class="block py-1 text-sm font-semibold">Confirmar contraseña</label>-->
          <input type="password" id="confirmarPassword"name="confirmarPassword" placeholder="Confirm Password" value="<%= (typeof old != 'undefined' && old.confirmarPassword) ? old.confirmarPassword : ""%>" class="leading-8 md:leading-10 shadow-md focus:outline-none focus:ring-2 focus:ring-purple-300 focus:border-transparent">
          <span class="errores"id="password2Errors"><%= (typeof errores != 'undefined' && errores.confirmarPassword) ? errores.confirmarPassword.msg : "" %></span>
        </div>
        <div class="my-5 flex justify-center">
          <button type="submit" class="button w-6/12 bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-opacity-50">Sign Up</button>
        </div>
      </form>
    </div>
  </main>
  <!-- Footer -->
  <%- include("./partials/footer") %>
  
  <script src="/javascripts/header.js"></script>
  <script src="/javascripts/registro.js"></script>
</body>
</html>